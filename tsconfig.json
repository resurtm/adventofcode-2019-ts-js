{
    "compilerOptions": {
        "alwaysStrict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "target": "es6",
        "rootDir": "./src",
        "lib": [
            "es5",
            "es6",
            "es7",
            "esnext.asynciterable"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}
